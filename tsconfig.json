{
    "version": "1.8.0",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "lib": [ "es6" ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [ "build", "node_modules" ]
}
